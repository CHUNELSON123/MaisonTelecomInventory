@page "/report"

<div class="report-page">
    <div class="report-header">
        <h1>Business Report</h1>
        <div class="period-selector">
            <span>Select Report Period:</span>
            <button class="btn btn-primary">This Month</button>
        </div>
    </div>

    <div class="report-grid">
        <div class="card report-card">
            <div class="card-body">
                <h5 class="card-title">Sale Summary</h5>
                <div class="summary-item">
                    <span>Total Revenue:</span>
                </div>
                <div class="summary-item">
                    <span>Total Profit:</span>
                </div>
            </div>
        </div>
        <div class="card report-card">
            <div class="card-body">
                <h5 class="card-title">Best - Selling Products</h5>
                <ol>
                    <li>iPhone 11 Pro: (15 sold)</li>
                    <li>Samsung Cable: (12 sold)</li>
                    <li>Laptop: (5 sold)</li>
                </ol>
            </div>
        </div>
        <div class="card report-card">
            <div class="card-body">
                <h5 class="card-title">Top Customers (By Spend)</h5>
                <ol>
                    <li>John Doe:</li>
                    <li>CHU:</li>
                </ol>
            </div>
        </div>
        <div class="card report-card">
            <div class="card-body">
                <h5 class="card-title">Inventory Summary</h5>
                <div class="summary-item">
                    <span>Total Items In stock :</span>
                </div>
                <div class="summary-item">
                    <span>Total Stuck Value:</span>
                </div>
            </div>
        </div>
    </div>
</div>